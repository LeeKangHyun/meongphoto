{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "lib": [
      "es6"
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "*": [
        "node_modules/*",
        "*"
      ]
    },
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "removeComments": false,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/@types",
      "node_modules/@types"
    ]
  },
  "include": [
    "node_modules/@types",
    "src/**/*",
    "src/@types"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "android",
    "ios"
  ]
}
